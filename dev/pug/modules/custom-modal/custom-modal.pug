<!--Обратный звонок-->
#custom-modal-callback.modal.fade.custom-modal(tabindex='-1', role='dialog', aria-labelledby='customModalCallback', aria-hidden='true')
    .modal-dialog(role='document').custom-modal__dialog
        .modal-content.custom-modal__content
            .modal-header.custom-modal__header
                h5#customModalCallbackLabel.modal-title.custom-modal__title.subtitle Оставьте пожалуйста контактные данные и мы вам перезвоним!
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
            .modal-body.custom-modal__body
                form.custom-form.custom-modal__form
                    .form-group.row
                        .col-12
                            label
                            input#name.form-control.custom-modal__input(name='name', placeholder='Имя', type='text', required='required')
                    .form-group.row
                        .col-12
                            label
                            input#phone.form-control.custom-modal__input(name='phone', placeholder='Телефон', type='text', required='required')
                    .form-group.row
                        .col-12
                            +button('custom-modal__btn', 'Отправить', true)(name='submit' id="form-submit" type="submit")
                    .form-group.row
                        .form-check
                            input#gridCheck.form-check-input(type='checkbox', onclick="document.getElementById('form-submit').disabled=!document.getElementById('form-submit').disabled;")
                            label.form-check-label(for='gridCheck')
                                i
                                | Нажимая на кнопку, вы даете согласие на обработку своих персональных данных.
            .modal-footer.custom-modal__footer
                a(href='#custom-modal-policy', data-toggle='modal', data-target='#custom-modal-policy') Политика конфиденциальности
<!--/Обратный звонок-->

