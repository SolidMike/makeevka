include ../modules/buttons/buttons_mixin
include ../modules/sliders/sliders_mixin
include ../modules/custom-card/custom-card-mixin
include ../modules/icon-with-text/icon-with-text-mixin

mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)
